@model WizardModel

<div class="container-fluid">
    <div class="mb-4">
        <h4>Configuración Bancaria</h4>
        <p class="text-muted">Configure la información bancaria y métodos de pago</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-university fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Bancos</h5>
                    </div>
                    <p class="card-text text-muted flex-grow-1 text-center">
                        Configure los bancos con los que trabaja su empresa
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100 mt-auto"
                            onclick="showModal('Banks', 'Bancos')">
                        <i class="fas fa-cog me-2"></i>Configurar
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-credit-card fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Métodos de Pago</h5>
                    </div>
                    <p class="card-text text-muted flex-grow-1 text-center">
                        Configure los diferentes métodos de pago para nóminas
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100 mt-auto"
                            onclick="showModal('PaymentMethods', 'Métodos de Pago')">
                        <i class="fas fa-cog me-2"></i>Configurar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-md-6 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-exchange-alt fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Frecuencia de Pago</h5>
                    </div>
                    <p class="card-text text-muted flex-grow-1 text-center">
                        Configure los ciclos y frecuencias de pago de nómina
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100 mt-auto"
                            onclick="showModal('PayFrequency', 'Frecuencia de Pago')">
                        <i class="fas fa-cog me-2"></i>Configurar
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-file-invoice-dollar fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Formatos de Archivo</h5>
                    </div>
                    <p class="card-text text-muted flex-grow-1 text-center">
                        Configure los formatos de archivo para pagos bancarios
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100 mt-auto"
                            onclick="showModal('FileFormats', 'Formatos de Archivo')">
                        <i class="fas fa-cog me-2"></i>Configurar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal único que se utilizará para todos los formularios -->
<div class="modal fade" id="dynamicModal" tabindex="-1" aria-labelledby="dynamicModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dynamicModalLabel">Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- Aquí se cargará el contenido dinámicamente -->
            </div>
        </div>
    </div>
</div>