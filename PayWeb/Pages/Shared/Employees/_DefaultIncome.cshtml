<div class="modal fade" id="frequencyModal" tabindex="-1" aria-labelledby="frequencyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="frequencyModalLabel">Frecuencia</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="frequencyType" class="form-label">Tipo de Frecuencia:</label>
                    <select class="form-select" id="frequencyType">
                        <option value="monthly">Mensual</option>
                        <option value="biweekly">Quincenal</option>
                        <option value="weekly">Semanal</option>
                        <option value="daily">Diario</option>
                        <option value="once">Una vez</option>
                    </select>
                </div>
                <input type="hidden" id="currentIncomeIndex" value="">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="applyFrequencyBtn">Aplicar</button>
            </div>
        </div>
    </div>
