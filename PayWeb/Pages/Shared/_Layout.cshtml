<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PayWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <i class="fas fa-money-check-alt me-2"></i>
                    <span class="fw-bold">PayWeb</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Wizard">
                                <i class="fas fa-building me-1"></i> Compañías
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-shield-alt me-1"></i> Privacidad
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a asp-page="/Wizard" class="btn btn-success d-flex align-items-center shadow-sm">
                            <i class="fas fa-plus-circle me-2"></i>
                            <span>Crear Compañía</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white bg-dark mt-0 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>PayWeb</h5>
                    <p class="small">Sistema de gestión de nómina y recursos humanos</p>
                </div>
                <div class="col-md-3">
                    <h6>Enlaces</h6>
                    <ul class="list-unstyled">
                        <li><a class="text-white-50" asp-area="" asp-page="/Index">Inicio</a></li>
                        <li><a class="text-white-50" asp-area="" asp-page="/Wizard">Crear Compañía</a></li>
                        <li><a class="text-white-50" asp-area="" asp-page="/Privacy">Privacidad</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Contacto</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-envelope me-2"></i> soporte@payweb.com</li>
                        <li><i class="fas fa-phone me-2"></i> (123) 456-7890</li>
                    </ul>
                </div>
            </div>
            <hr class="my-3 bg-secondary" />
            <div class="text-center">
                <p class="small mb-0">&copy; @DateTime.Now.Year - PayWeb - Todos los derechos reservados</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/modalHelper.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>