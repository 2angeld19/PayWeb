@section Scripts {
<script>
    // Animación para los contadores
    document.addEventListener('DOMContentLoaded', function() {
        // Detectar cuando los elementos entran en el viewport
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Agrega la clase para iniciar la animación
                    entry.target.classList.add('animate-in');
                }
            });
        }, { threshold: 0.1 });

        // Observar elementos con animación
        document.querySelectorAll('.feature-card, .hero-content, .hero-image-container, .stat-card, .testimonial-card').forEach(el => {
            observer.observe(el);
        });
    });
</script>
}

